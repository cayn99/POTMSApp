@if (ShowDetailsPage)
{
    <SfDialog Width="1000px" IsModal="true" @bind-Visible="ShowDetailsPage">
                <div class="card border-success shadow-lg">
                    <div class="card-header">Purchase Request #@PurchaseRequestDetails.PrNumber Details</div>
                    <div class="card-body">
                        <div class="hstack gap-2">
                            <div class="vstack gap-3">
                                <table class="table border-secondary">
                                    <tbody>
                                        <tr>
                                            <td><h6 class="fw-bold-bold">Purchase Request Number:</h6></td>
                                    <td> @PurchaseRequestDetails.PrNumber</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Division:</h6></td>
                                    <td> @PurchaseRequestDetails.Division</td>
                                        </tr>
                                <tr>
                                     <td><h6 class="fw-bold">Date:</h6></td>
                                    <td> @PurchaseRequestDetails.Date</td>
                                        </tr>
                                <tr>
                                    <td><h6 class="fw-bold">Particulars:</h6></td>
                                    <td> @PurchaseRequestDetails.Particulars</td>
                                </tr>
                                <tr>
                                    <td><h6 class="fw-bold">Unit Type:</h6></td>
                                    <td> @PurchaseRequestDetails.UnitType</td>
                                </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Quantity:</h6></td>
                                    <td> @PurchaseRequestDetails.Quantity</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Unit Cost:</h6></td>
                                    <td> @PurchaseRequestDetails.UnitCost</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Total Cost:</h6></td>
                                    <td> @PurchaseRequestDetails.TotalCost</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Delivery Terms:</h6></td>
                                    <td> @PurchaseRequestDetails.DeliveryTerm</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Delivery Area:</h6></td>
                                    <td> @PurchaseRequestDetails.DeliveryArea</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Purpose:</h6></td>
                                    <td> @PurchaseRequestDetails.Purpose</td>
                                        </tr>
                                <tr>
                                    <td><h6 class="fw-bold">Project Title:</h6></td>
                                    <td> @PurchaseRequestDetails.ProjectTitle</td>
                                </tr>
                                <tr>
                                    <td><h6 class="fw-bold">Project Code:</h6></td>
                                    <td> @PurchaseRequestDetails.ProjectCode</td>
                                </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Requestor:</h6></td>
                                    <td> @PurchaseRequestDetails.Requestor</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary float-start" @onclick="PrintDetailsPage">Print</button>
                            <button class="btn btn-danger float-end" @onclick="DetailsPageCloseButtonClicked">Close</button>
                        </div>
                    </div>
                </div>
    </SfDialog>
}
@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public PurchaseRequest PurchaseRequestDetails { get; set; } = new();
    [Parameter] public EventCallback HandleDetailsPageCloseButtonClicked { get; set; } = new();

    async Task DetailsPageCloseButtonClicked() => await HandleDetailsPageCloseButtonClicked.InvokeAsync();

    // Print function to trigger the browser's print dialog
    void PrintDetailsPage() => JSRuntime.InvokeVoidAsync("window.print");
}

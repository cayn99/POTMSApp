@page "/inspections"
@implements IDisposable
@if (allState.ShowInspection)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="float-start">Inspection</h4>
                        <button class="btn btn-outline-success float-end" @onclick="OpenDialog">
                            <i class="bi bi-plus-circle-dotted"></i> Input Inspection Details
                        </button>
                    </div>
                    <div class="card-header" style="max-height: 580px; overflow-x: hidden; overflow-y: scroll;">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col" style="text-align: center">#</th>
                                        <th scope="col" style="text-align: center">Status</th>
                                        <th scope="col" style="text-align: center">Date of Inspection</th>
                                        <th scope="col" style="text-align: center">Inspector</th>
                                        <th scope="col" style="text-align: center">Date Accepted</th>
                                        <th scope="col" style="text-align: center">Accepted By</th>
                                        <th scope="col" style="text-align: center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Inspections is not null)
                                    {
                                        int count = 1;
                                        foreach (var item in Inspections)
                                        {
                                            <tr>
                                                <th scope="row" style="text-align: center">@count</th>
                                                <td style="text-align: center">@item.Status</td>
                                                <td style="text-align: center">@item.DateInspected</td>
                                                <td style="text-align: center">@item.Inspector</td>
                                                <td style="text-align: center">@item.DateAccepted</td>
                                                <td style="text-align: center">@item.AcceptedBy</td>
                                                <td style="text-align: center">
                                                    <button type="button" class="btn btn-outline-info" @onclick="()=>EditClicked(item)"><i class="bi bi-pencil"></i> Edit </button>
                                                    <button type="button" class="btn btn-outline-danger" @onclick="()=>DeleteClicked(item)"><i class="bi bi-trash"></i> Delete </button>
                                                </td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4"><div class="alert-info text-center">No Inspection details added yet!</div></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<InspectionDialog @ref="inspectionDialog"
           HandleSaveOperationEvent="HandleSaveOperationEvent"
           Inspection="Inspection" />
@code {
    InspectionDialog? inspectionDialog;
    Inspection Inspection = new Inspection
        {
            Inspector = string.Empty,
            AcceptedBy = string.Empty
        };
    public string Title { get; set; } = "Add";
    public List<Inspection> Inspections { get; set; } = new();

    protected async override Task OnInitializedAsync()
    {
        await GetInspections();
        allState.Action += StateHasChanged;
    }

    private async Task GetInspections()
    {
        Inspections = await inspectionService.GetAll(Constants.InspectionBaseUrl);
    }

    void OpenDialog()
    {
        inspectionDialog?.OpenDialog();
    }

    private async Task HandleSaveOperationEvent(Inspection inspection)
    {
        bool successCheck = false;
        if (Inspection.Id > 0)
        {
            var result = await inspectionService.Update(inspection, Constants.InspectionBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var response = await inspectionService.Insert(inspection, Constants.InspectionBaseUrl);
            successCheck = await DisplayMessage(response.Flag, response.Message);
        }
        if (successCheck)
        {
            Inspection Inspection = new Inspection
                {
                    Inspector = string.Empty,
                    AcceptedBy = string.Empty
                };
            await GetInspections();
            inspectionDialog?.ChangeTitle("Add");
        }
    }

    private void EditClicked(Inspection inspection)
    {
        inspectionDialog?.ChangeTitle("Update");
        Inspection = inspection;
        OpenDialog();
    }

    private async Task DeleteClicked(Inspection inspection)
    {
        bool confirm = await dialogService.ConfirmAsync($"You are going to delete Inspection ID #{inspection.Id}, are you sure?", "Confirm Delete");
        if (!confirm) return;

        var response = await inspectionService.DeleteById(inspection.Id, Constants.InspectionBaseUrl);
        if (await DisplayMessage(response.Flag, response.Message))
            await GetInspections();
    }

    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Success!");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Alert!");
            return false;
        }
    }

    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }
}

@using Client.Pages.OtherPages
@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@attribute [Authorize]

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <div class="left-side">
                <img class="icon-link" src="images/icon/nfrdi.png" alt="nfrdi icon" width="100" height="100" 
                style="padding-top: 10px; padding-right: 10px">
               <div class="text">
                <h5 style="color: black">National Fisheries Research and Development Institute</h5>
                <h2 style="color: black">Purchase Order and Management System</h2>
                </div>
            </div>
            <div class="right-side">
                <a href="/identity/account/login" style="padding-bottom: 10px; color: red; text-decoration: underline, bold" @onclick="LogoutClicked">
                    <i class="bi bi-box-arrow-left" style="padding-right: 10px"></i>
                    Logout
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<Syncfusion.Blazor.Popups.SfDialogProvider/>

